+	addiu	$t3, 1
+	lw	$v1, ($t1)
+	addiu	$t1, REG_SZ
+	sw	$v1, ($t2)
+	addiu	$t2, REG_SZ
+	bltu	$t3, $a2, store_stack_arg
+
