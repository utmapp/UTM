+	sd	$t9, REG_OFFSET(31)($a0)
+
+	/* set our $pc */
+	sd	$a1, MCONTEXT_PC($a0)
+
+	POP_FRAME(libucontext_makecontext)
+
+	jr	$ra
+END(libucontext_makecontext)
